tests=(
  "cargo test --features test-node-endpoint"
  "cargo test --features test-authorization-handler -- --test-threads=1"
  )

exitcode=0

for test in "${tests[@]}"; do
    echo "$test"

    $test
    test_exit=$?

    if [[ $test_exit != 0 ]]; then
        exitcode=1
        break
    fi

done

exit $exitcode
