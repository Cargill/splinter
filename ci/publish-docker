export VERSION=AUTO_STRICT

top_dir=$(cd $(dirname $(dirname $0)) && pwd)

if [ -z $1 ]
then
    iso_id=$($top_dir/bin/get_version)
else
    iso_id=$1
fi

export ISOLATION_ID="$iso_id"

echo "ISOLATION_ID is: $iso_id"
REPO_VERSION=$($top_dir/bin/get_version) docker-compose -f docker-compose-installed.yaml build
docker-compose -f docker-compose-installed.yaml push
